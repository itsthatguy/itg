!!! html
%html
  %head
    %meta{ :name => 'viewport', :content => 'width=600px, initial-scale=1.0' }
    %link{"rel" => "stylesheet", "href" => "stylesheets/screen.css", "type" => "text/css"}
    %script{:type => "text/javascript",
        :src  => "http://use.typekit.com/ook7wza.js"}
    :javascript
      try{Typekit.load();}catch(e){}
  %body
    .pages
      .t1
      .t2
    #main
      %header
        %nav
          %ul
            %li.dribble
              %a(href="http://www.dribbble.com/itsthatguy") dribbble
            %li.twitter
              %a(href="http://www.twitter.com/itg") twitter
        %a(href="/")
          %div.itg
      =yield
    .pages
      .b1
      .b2
    %footer
      %p
        %a{:href => @shot.url, :target => '_blank'}
          = image_tag @player.shots[0].image_url
          = image_tag @player.shots[1].image_url
          = image_tag @player.shots[2].image_url
          = image_tag @player.shots[3].image_url